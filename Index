        <div class="container">
            <div class="header">
                <h1>üîê Steganographic Messenger</h1>
                <p>Hide secrets in plain sight</p>
                <div class="mode-toggle">
                    <button class="mode-btn active" data-mode="encode">Encode Message</button>
                    <button class="mode-btn" data-mode="decode">Decode Message</button>
                </div>
            </div>
    
            <div class="main-content">
                <!-- Encode Section -->
                <div class="section active" id="encode-section">
                    <div class="card">
                        <h3>Your Secret Message</h3>
                        <textarea id="secretMessage" placeholder="Enter your secret message here..."></textarea>
                    </div>
    
                    <div class="card">
                        <h3>Received Message (Optional)</h3>
                        <textarea id="receivedMessage" placeholder="Paste the message you received to respond to (optional)..."></textarea>
                        <div class="info">
                            üí° If you paste a received message, the mundane conversation will be loosely related to it for more natural context.
                        </div>
                    </div>
    
                    <button class="btn" id="encodeBtn">üîí Generate Hidden Message</button>
    
                    <div class="card" id="outputCard" style="display: none;">
                        <h3>Mundane Message (Send This)</h3>
                        <div class="output-box" id="outputMessage"></div>
                        <button class="btn copy-btn" id="copyBtn">üìã Copy to Clipboard</button>
                        <div class="info" style="margin-top: 12px;">
                            ‚úÖ Share this message normally. Your secret is hidden inside!
                        </div>
                    </div>
                </div>
    
                <!-- Decode Section -->
                <div class="section" id="decode-section">
                    <div class="card">
                        <h3>Received Mundane Message</h3>
                        <textarea id="encryptedMessage" placeholder="Paste the mundane message you received..."></textarea>
                    </div>
    
                    <button class="btn" id="decodeBtn">üîì Extract Hidden Message</button>
    
                    <div class="card" id="decodedCard" style="display: none;">
                        <h3>Hidden Secret Message</h3>
                        <div class="output-box" id="decodedMessage"></div>
                    </div>
                </div>
            </div>
        </div>
    
        <!-- Install Prompt -->
        <div class="install-prompt" id="installPrompt">
            <div class="install-text">üì± Install this app for quick access!</div>
            <button class="install-btn" id="installBtn">Install</button>
            <button class="close-btn" id="closeInstall">√ó</button>
        </div>
    
        <script>
            // PWA Installation
            let deferredPrompt;
            const installPrompt = document.getElementById('installPrompt');
            const installBtn = document.getElementById('installBtn');
            const closeInstall = document.getElementById('closeInstall');
    
            window.addEventListener('beforeinstallprompt', (e) => {
                e.preventDefault();
                deferredPrompt = e;
                installPrompt.classList.add('show');
            });
    
            installBtn.addEventListener('click', async () => {
                if (deferredPrompt) {
                    deferredPrompt.prompt();
                    const { outcome } = await deferredPrompt.userChoice;
                    deferredPrompt = null;
                    installPrompt.classList.remove('show');
                }
            });
    
            closeInstall.addEventListener('click', () => {
                installPrompt.classList.remove('show');
            });
    
            // Register Service Worker
            if ('serviceWorker' in navigator) {
                window.addEventListener('load', () => {
                    navigator.serviceWorker.register('/service-worker.js')
                        .then(reg => console.log('Service Worker registered'))
                        .catch(err => console.log('Service Worker registration failed:', err));
                });
            }
    
            // Mode Toggle
            const modeBtns = document.querySelectorAll('.mode-btn');
            const sections = document.querySelectorAll('.section');
    
            modeBtns.forEach(btn => {
                btn.addEventListener('click', () => {
                    const mode = btn.dataset.mode;
                    
                    modeBtns.forEach(b => b.classList.remove('active'));
                    btn.classList.add('active');
                    
                    sections.forEach(s => s.classList.remove('active'));
                    document.getElementById(`${mode}-section`).classList.add('active');
                });
            });
    
            // Steganography Functions
            function textToBinary(text) {
                return text.split('').map(char => 
                    char.charCodeAt(0).toString(2).padStart(8, '0')
                ).join('');
            }
    
            function binaryToText(binary) {
                const bytes = binary.match(/.{8}/g) || [];
                return bytes.map(byte => String.fromCharCode(parseInt(byte, 2))).join('');
            }
    
            const mundaneTemplates = {
                greetings: [
                    "Hey! How's it going?",
                    "Hi there! Hope you're doing well.",
                    "Hello! Long time no chat.",
                    "Hey! What's new with you?",
                    "Hi! How have you been?"
                ],
                responses: [
                    "Thanks for your message!",
                    "Great to hear from you!",
                    "I appreciate you reaching out.",
                    "Good to hear from you!",
                    "Thanks for getting back to me!"
                ],
                topics: {
                    weather: [
                        "The weather has been quite unpredictable lately.",
                        "It's been really nice outside these past few days.",
                        "Can't believe how hot/cold it's been!",
                        "Perfect weather for a walk today."
                    ],
                    work: [
                        "Work has been keeping me pretty busy.",
                        "Just finished a big project at work.",
                        "The usual grind at the office, you know how it is.",
                        "Work's been interesting lately."
                    ],
                    weekend: [
                        "Any plans for the weekend?",
                        "Hope you have a great weekend!",
                        "Looking forward to the weekend.",
                        "Weekend couldn't come soon enough!"
                    ],
                    food: [
                        "Tried this amazing new restaurant recently.",
                        "Been cooking a lot at home lately.",
                        "Had the best coffee this morning.",
                        "Thinking about what to have for dinner."
                    ],
                    general: [
                        "Just wanted to check in and see how things are going.",
                        "Been thinking about our last conversation.",
                        "There's something I wanted to run by you.",
                        "Hope everything is going smoothly on your end."
                    ]
                },
                closings: [
                    "Let me know what you think!",
                    "Talk to you soon!",
                    "Catch you later!",
                    "Take care!",
                    "Looking forward to hearing from you!"
                ]
            };
    
            function analyzeReceivedMessage(message) {
                if (!message || message.trim() === '') return null;
                
                const lower = message.toLowerCase();
                const keywords = {
                    weather: ['weather', 'rain', 'sun', 'hot', 'cold', 'snow'],
                    work: ['work', 'job', 'office', 'project', 'meeting', 'busy'],
                    weekend: ['weekend', 'saturday', 'sunday', 'plans'],
                    food: ['food', 'restaurant', 'dinner', 'lunch', 'coffee', 'eat']
                };
                
                for (const [topic, words] of Object.entries(keywords)) {
                    if (words.some(word => lower.includes(word))) {
                        return topic;
                    }
                }
                return 'general';
            }
    
            function generateMundaneText(binary, receivedMsg) {
                const topic = analyzeReceivedMessage(receivedMsg) || 'general';
                const useResponse = receivedMsg && receivedMsg.trim() !== '';
                
                let mundane = useResponse 
                    ? mundaneTemplates.responses[Math.floor(Math.random() * mundaneTemplates.responses.length)]
                    : mundaneTemplates.greetings[Math.floor(Math.random() * mundaneTemplates.greetings.length)];
                
                mundane += ' ';
                
                const topicSentences = mundaneTemplates.topics[topic];
                mundane += topicSentences[Math.floor(Math.random() * topicSentences.length)];
                mundane += ' ';
                
                const binaryArray = binary.split('');
                let pointer = 0;
                
                const words = mundane.split(' ');
                const modifiedWords = words.map(word => {
                    if (pointer < binaryArray.length && word.length > 0) {
                        const bit = binaryArray[pointer];
                        pointer++;
                        
                        if (bit === '1') {
                            return word + (Math.random() > 0.5 ? ' ' : '  ');
                        } else {
                            return word + ' ';
                        }
                    }
                    return word + ' ';
                });
                
                mundane = modifiedWords.join('');
                
                while (pointer < binaryArray.length) {
                    const additionalTopic = Object.keys(mundaneTemplates.topics)[
                        Math.floor(Math.random() * Object.keys(mundaneTemplates.topics).length)
                    ];
                    const sentences = mundaneTemplates.topics[additionalTopic];
                    const sentence = sentences[Math.floor(Math.random() * sentences.length)];
                    
                    const words = sentence.split(' ');
                    const encoded = words.map(word => {
                        if (pointer < binaryArray.length) {
                            const bit = binaryArray[pointer];
                            pointer++;
                            return word + (bit === '1' ? '  ' : ' ');
                        }
                        return word + ' ';
                    }).join('');
                    
                    mundane += encoded;
                }
                
                mundane += mundaneTemplates.closings[Math.floor(Math.random() * mundaneTemplates.closings.length)];
                
                return mundane.replace(/\s+/g, ' ').trim() + ' ';
            }
    
            function extractBinary(text) {
                const segments = text.split(/(\s+)/);
                let binary = '';
                
                for (let i = 0; i < segments.length; i++) {
                    if (/^\s+$/.test(segments[i])) {
                        const spaceCount = segments[i].length;
                        if (spaceCount === 2) {
                            binary += '1';
                        } else if (spaceCount === 1) {
                            binary += '0';
                        }
                    }
                }
                
                return binary;
            }
    
            // Encode Button
            document.getElementById('encodeBtn').addEventListener('click', () => {
                const secret = document.getElementById('secretMessage').value;
                const received = document.getElementById('receivedMessage').value;
                
                if (!secret.trim()) {
                    alert('Please enter a secret message!');
                    return;
                }
                
                const binary = textToBinary(secret);
                const mundane = generateMundaneText(binary, received);
                
                document.getElementById('outputMessage').textContent = mundane;
                document.getElementById('outputCard').style.display = 'block';
                
                // Scroll to output
                document.getElementById('outputCard').scrollIntoView({ behavior: 'smooth', block: 'nearest' });
            });
    
            // Copy Button
            document.getElementById('copyBtn').addEventListener('click', async () => {
                const text = document.getElementById('outputMessage').textContent;
                
                try {
                    await navigator.clipboard.writeText(text);
                    const btn = document.getElementById('copyBtn');
                    const originalText = btn.textContent;
                    btn.textContent = '‚úÖ Copied!';
                    setTimeout(() => {
                        btn.textContent = originalText;
                    }, 2000);
                } catch (err) {
                    alert('Failed to copy. Please copy manually.');
                }
            });
    
            // Decode Button
            document.getElementById('decodeBtn').addEventListener('click', () => {
                const encrypted = document.getElementById('encryptedMessage').value;
                
                if (!encrypted.trim()) {
                    alert('Please paste a message to decode!');
                    return;
                }
                
                const binary = extractBinary(encrypted);
                
                if (!binary) {
                    document.getElementById('decodedMessage').textContent = '‚ùå No hidden message found!';
                    document.getElementById('decodedCard').style.display = 'block';
                    return;
                }
                
                const decoded = binaryToText(binary);
                document.getElementById('decodedMessage').textContent = decoded || '‚ùå Could not decode message!';
                document.getElementById('decodedCard').style.display = 'block';
                
                // Scroll to output
                document.getElementById('decodedCard').scrollIntoView({ behavior: 'smooth', block: 'nearest' });
            });
        </script>
    </body>
